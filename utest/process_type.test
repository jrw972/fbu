        ASSERT (type.eval.kind == ExpressionValue::Error);
      }; off();
    }; off();

    scenario(not_defined); {
      unit(process_type); {
        ast::Identifier id1 (1, "mytype");
        ast::Identifier id2 (1, "not_defined");
        ast::IdentifierType identifier_type (1, &id2);
        ast::TypeDecl typedecl (1, &id1, &identifier_type);
        enter_identifiers (&typedecl, er, symbol_table, true);
        Identifier id (1, "mytype");
        IdentifierType type (1, &id);
        process_type (&type, er, symbol_table);
        ASSERT (er.list ().size () == 2);
        ASSERT (type.eval.kind == ExpressionValue::Error);
      }; off();
    }; off();

    scenario(success); {
      unit(process_type); {
        populate_universe_block (symbol_table);
        Identifier id (1, "int");
        IdentifierType type (1, &id);
        process_type (&type, er, symbol_table);
