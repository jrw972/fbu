      ast::Identifier type_id (1, "int");
      ast::Receiver receiver (1, &this_id, Mutable, Mutable, false, &type_id);
      process_receiver (er, symbol_table, &mytype, &receiver, true, false);
      ASSERT (er.list ().size () == 2);
    }; off();
  }; off();

